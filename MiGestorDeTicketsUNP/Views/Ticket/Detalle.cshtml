@model MiGestorDeTicketsUNP.ViewModels.TicketsViewModels
@{
    ViewBag.Title = "Detalle Ticket";
}

<h2>
    <a style="float:right" href="@Url.Action("Index","Ticket")"><i class="fa-solid fa-circle-left"></i></a>
    Detalle del Ticket

</h2>
<hr />

@if (Model.Ticket == null)
{
    <h4>El dato que busca no existe</h4>
}
else
{
    <div class="form-group">
        <label>Id de Ticket :</label>
        @Model.Ticket.id

    </div>

    <div class="form-group">
        <label>Fecha de Creación :</label>
        @Model.Ticket.FechaInicio

    </div>
    <div class="form-group">
        <label>Estado :</label>
        @Model.Ticket.Status.Nombre





    </div>

    <div class="form-group">
        <label>Usuario : </label>
        @Model.Ticket.Usuario.Nombres


    </div>
    <div class="form-group">

        <label>Descripción : </label>
        @Model.Ticket.Descripcion

    </div>
    <div class="form-group">

        <label>Responsable : </label>
        @Model.Ticket.Responsable.Nombres

    </div>


    <div class="form-group">
        <input type="button" value="Solución" class="btn btn-success" />
    </div>

}
